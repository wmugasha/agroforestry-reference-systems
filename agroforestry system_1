  <!-- Citation (in-text) -->
  <citation>
    <layout suffix=".">
      <text macro="author"/>
      <text variable="issued" prefix=" (" suffix=")"/>
    </layout>
  </citation>

  <!-- Bibliography -->
  <bibliography hanging-indent="true" line-spacing="1">
    <layout>
      <!-- Authors: Surname + initials (no periods), list ALL authors -->
      <text macro="author" suffix=" "/>
      <!-- Year in parentheses -->
      <text variable="issued" prefix="(" suffix=")"/>
      <text variable="title" prefix=" " suffix=". "/>
      <!-- Journal --> (use whatever is in the Source field; user may input abbreviated name) -->
      <text variable="container-title" prefix=" " suffix=" "/>
      <!-- Volume:Pages -->
      <text variable="volume" prefix=""/>
      <text variable="page" prefix=":" suffix=". "/>
      <!-- DOI as full https://doi.org/... -->
      <group>
        <text variable="DOI" prefix="https://doi.org/" suffix=". "/>
      </group>
      <!-- URL when DOI is absent or as additional -->
      <group>
        <text variable="URL" prefix="" suffix=""/>
      </group>
    </layout>
  </bibliography>

  <!-- Macros -->
  <macro name="author">
    <!-- Force listing all authors by setting et-al thresholds high -->
    <names variable="author" et-al-min="100" et-al-subsequent-min="100">
      <!-- Use family then given-initials without punctuation -->
      <name form="long" delimiter=", ">
        <name-part name="family"/>
        <text value=", "/>
        <name-part name="given" initialize-with=""/>
      </name>
    </names>
  </macro>

